/* pages/issue-detail/issue-detail.wxss */
.header-container{
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
}
.top-title{
  font-size:56rpx;
  font-weight:400;
  line-height:80rpx;
  color:rgba(0,0,0,1);
  margin-top: 16rpx;
}
/* 问题详情 */
.content-container {
}
.already-deal{
  padding: 20rpx 60rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 16rpx rgba(69,79,99,0.1);
  opacity:1;
}
.already-deal .list-header{
  margin: 24rpx 0 18rpx 0;
  width:352rpx;
  height:60rpx;
  font-size:44rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:60rpx;
  color:rgba(69,79,99,1);
  opacity:1;
}
.list-content{
  width:552rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(123,158,181,1);
  margin: 0 0 30rpx 0;
}
.already-deal .list-img image{
  width: 144rpx;
  height: 120rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:10rpx;
  margin: 0 20rpx 30rpx 0;
  padding: 6rpx 4rpx 6rpx 0rpx;
}
.already-deal .list-img video{
  width: 144rpx;
  height: 120rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:10rpx;
  margin: 0 20rpx 30rpx 0;
  padding: 6rpx 4rpx 6rpx 0rpx;
}
.list-time{
  display: flex;
  align-items: center;
}
.list-time .evaluate{
  /* width:108rpx;
  height:48rpx; */
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(98,169,115,1);
  border-radius:60rpx;
  margin-left: 148rpx;

  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:48rpx;
  color:rgba(98,169,115,1);

}

.list-time .time-content{
  width:246rpx;
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(163,189,206,1);
  opacity:1;

}
.list-time .time-img{
  width:32rpx;
  height:32rpx;
  border-radius:50%;
  margin: 2rpx 16rpx 4rpx 0;
}
.list-time button::after{
  border: none
}

/* 中间分隔样式 */
.middledivi{
  width:100%;
  height:20rpx;
  background:rgba(218,229,236,1);
  opacity:0.5;
}

/* 处理结果 */
.deal-result{
  margin: 40rpx 0 30rpx 60rpx;
}
.deal-result .deal-content{
  width:176rpx;
  height:60rpx;
  font-size:44rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:60rpx;
  color:rgba(69,79,99,1);
}
.deal-result .deal-detail{
  width:552rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(123,158,181,1);
  padding: 30rpx 0;
}

.deal-progress .van-steps--vertical{
  padding: 0 60rpx;
  
}
.deal-progress .van-ellipsis .van-tab .van-tab--active{
  color: #0099FF;
  /* color: var(--text-color,#0099FF) */
}

/* 评价 */
.subBtnBox .subBtn{
    width:632rpx;
    height:88rpx;
    color: #FFFFFF;
    font-size: 36rpx;
    background:rgba(0, 153, 255, 1);
    box-shadow:0rpx 10rpx 16rpx rgba(0,153,255,0.2);
    opacity:1;
    border-radius:126rpx;
    margin:60rpx auto;
}
.subBtnBox .subBtn.button-hover{
    opacity: .8
}

/* 进度条样式 */
.deal-progress .van-steps .van-step--finish{
  color: rgba(123, 158, 181, 1)

}
.deal-progress .van-step__title view:first-child{
  font-size: 36rpx;
  margin: 8rpx 0;
}

.img-background{
  display: flex;
  justify-content: center;
  align-items: center;
  width:72rpx;
  height:72rpx;
  background:rgba(0,153,255,1);
  border-radius:50%;
  opacity:1;
  margin-top: 16rpx;
}

.index-loading-text {
    margin-top: 30rpx;
    font-size: 28rpx;
    color: #999999;
}

.loading-style{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}