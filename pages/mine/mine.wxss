/* pages/mine/mine.wxss */

.header-container {
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
}

.top-title {
  font-size: 56rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: rgba(0, 0, 0, 1);
  margin-top: 16rpx;
}
.progress{
  margin-top: 40rpx;
  padding: 0 32rpx;
}
.progress .van-tabs__line {
  background-color: rgba(0, 153, 255, 1);
}

.progress .van-tab {
  font-size: 36rpx;
  font-weight: 500;
}

.content-container {
  position: relative;
  left: 50%;
  width: 632rpx;
  margin-left: -316rpx;
  margin-top: 66rpx;
}

.already-deal {
  margin-bottom: 40rpx;
  padding: 20rpx 40rpx;
  /* height:450rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 8rpx 16rpx rgba(69, 79, 99, 0.1);
  opacity: 1;
  border-radius: 20rpx;
}

.already-deal .list-header {
  margin: 24rpx 0 18rpx 0;
  width: 352rpx;
  height: 60rpx;
  font-size: 44rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 60rpx;
  color: rgba(69, 79, 99, 1);
  opacity: 1;
}

.list-content {
  width: 552rpx;
  /* height:80rpx; */
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(123, 158, 181, 1);
  margin: 0 0 30rpx 0;
}

.already-deal .list-img image {
  width: 144rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 1;
  border-radius: 10rpx;
  margin: 0 20rpx 30rpx 0;
  padding: 6rpx 4rpx 6rpx 0rpx;
}
.already-deal .list-img video {
  width: 144rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 1;
  border-radius: 10rpx;
  margin: 0 20rpx 30rpx 0;
  padding: 6rpx 4rpx 6rpx 0rpx;
}

.list-time {
  display: flex;
  align-items: center;
}

.list-time .evaluate {
  /* width:108rpx;
  height:48rpx; */
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(98, 169, 115, 1);
  border-radius: 60rpx;
  margin-left: 148rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(98, 169, 115, 1);
}

.list-time .evaluate1 {
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(98, 169, 115, 1);
  border-radius: 60rpx;
  margin-left: 120rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(98, 169, 115, 1);
}

.list-time .time-content {
  width: 246rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(163, 189, 206, 1);
  opacity: 1;
}

.list-time .time-img {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin: 2rpx 16rpx 4rpx 0;
}

.list-time button::after {
  border: none;
}

.empty{
  position: absolute;
  width: 640rpx;
  left: 50%;
