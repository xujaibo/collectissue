page {
    height: 100%;
}

.bg-container {
    width: 100%;
    height: 100%;
    background: url("http://www.oceansoft.com.cn/workdesk/static/mina/images/index_bg.png");
}

.auth-botton {
    width: 632rpx;
    background: #0099FF;
    color: #fff;
    font-size: 36rpx;
    margin-top: 80rpx;
    border: none;
    border-radius: 126rpx;
    box-shadow: 0px 5px 8px rgba(0, 153, 255, 0.2);
